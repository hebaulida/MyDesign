<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lee.login.Register"
    >
    <RelativeLayout
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="24sp"
            android:text="注册用户"
            />
        <TextView
            android:layout_alignParentBottom ="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#3f000000"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:id="@+id/stunumtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="学号："
            />
        <EditText
            android:id="@+id/stu_num"
            android:layout_toRightOf="@id/stunumtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="20160101"
            />
        <TextView
            android:layout_alignParentBottom ="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#3f000000"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:id="@+id/passtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="密码："
            />
        <EditText
            android:id="@+id/pass"
            android:layout_toRightOf="@id/passtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:password="true"
            android:hint="***"
            />
        <TextView
            android:layout_alignParentBottom ="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#3f000000"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:id="@+id/repasstitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="重复密码："
            />
        <EditText
            android:id="@+id/repass"
            android:layout_toRightOf="@id/repasstitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:password="true"
            android:hint="***"
            />
        <TextView
            android:layout_alignParentBottom ="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#3f000000"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:id="@+id/nametitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="用户名："
            />
        <EditText
            android:id="@+id/user_name"
            android:layout_toRightOf="@id/nametitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="名称"
            />
        <TextView
            android:layout_alignParentBottom ="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#3f000000"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:id="@+id/classtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="班级："
            />
        <EditText
            android:id="@+id/class_"
            android:layout_toRightOf="@id/classtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="网络01"
            />
        <TextView
            android:layout_alignParentBottom ="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#3f000000"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:id="@+id/sextitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="性别："
            />
        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sextitle"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/manBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/womanBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"/>
        </RadioGroup>
        <TextView
            android:layout_alignParentBottom ="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#3f000000"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:id="@+id/roletitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="身份："
            />
        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/roletitle"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/stuBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学生"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/teacherBt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教师"/>
        </RadioGroup>
        <TextView
            android:layout_alignParentBottom ="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#3f000000"
            />
    </RelativeLayout>


    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:text="注册"/>
</LinearLayout>
