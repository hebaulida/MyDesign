<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  tools:context="com.lee.imtest.NumberThreeFragment"
			  android:orientation="vertical"
			  android:id="@+id/main">

	<!-- TODO: Update blank fragment layout -->

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="#ffffff"
		>

		<TextView
			android:id="@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textSize="24sp"
			android:text="我的信息"
			/>
		<TextView
			android:layout_alignParentBottom ="true"
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:background="#3f000000"
			/>
	</RelativeLayout>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<RelativeLayout
			android:id="@+id/local_view"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			>
			<TextView
				android:id="@+id/stuNumtitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="学号"
				/>
			<TextView
				android:id="@+id/stuNum"
				android:layout_toRightOf="@id/stuNumtitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="20160511"
				/>
			<TextView
				android:layout_alignParentBottom ="true"
				android:layout_width="match_parent"
				android:layout_height="0.5dp"
				android:background="#3f000000"
				/>
		</RelativeLayout>
	<RelativeLayout
		android:id="@+id/name_view"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		>
		<TextView
			android:id="@+id/nametitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:text="用户名"
			/>
		<TextView
			android:id="@+id/username"
			android:layout_toRightOf="@id/nametitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="名称"
			/>
		<TextView
			android:layout_alignParentBottom ="true"
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:background="#3f000000"
			/>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/role_view"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		>
		<TextView
			android:id="@+id/roletitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:text="身份："
			/>
		<TextView
			android:id="@+id/role"
			android:layout_toRightOf="@id/roletitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="生"
			/>
		<TextView
			android:layout_alignParentBottom ="true"
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:background="#3f000000"
			/>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/sex_view"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		>
		<TextView
			android:id="@+id/sextitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:text="性别"
			/>
		<TextView
			android:id="@+id/sex"
			android:layout_toRightOf="@id/sextitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="性别"
			/>
		<TextView
			android:layout_alignParentBottom ="true"
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:background="#3f000000"
			/>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/class_view"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		>
		<TextView
			android:id="@+id/classtitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:text="班级："
			/>
		<TextView
			android:id="@+id/class_"
			android:layout_toRightOf="@id/classtitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="班级"
			/>
		<TextView
			android:layout_alignParentBottom ="true"
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:background="#3f000000"
			/>
	</RelativeLayout>
		<RelativeLayout
			android:id="@+id/pass_view"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			>
			<TextView
				android:id="@+id/pass"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="修改密码"
				/>

			<TextView
				android:layout_alignParentBottom ="true"
				android:layout_width="match_parent"
				android:layout_height="0.5dp"
				android:background="#3f000000"
				/>
		</RelativeLayout>
	</LinearLayout>
	</ScrollView>
</LinearLayout>
